<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="16dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/searchresult_image_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Image#1"
            android:textColor="#33228f"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchresult_image_tv_title"
            android:layout_alignBottom="@id/searchresult_image_tv_title"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorGrey2"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/search_result_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text=".IMG"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/searchresult_image_tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchresult_image_tv_title"
            android:layout_margin="4dp"
            android:text="This is recycler view tutorial, and this will be document preview"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>